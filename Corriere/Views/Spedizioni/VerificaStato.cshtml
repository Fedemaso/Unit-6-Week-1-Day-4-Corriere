@model Corriere.Models.RicercaSpedizioneViewModel

@{
    ViewBag.Title = "Visualizza Stato Spedizione";
}

<h2>Ricerca Spedizione</h2>

@using (Html.BeginForm("VerificaStato", "Spedizioni", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.CodiceFiscale)
        @Html.TextBoxFor(model => model.CodiceFiscale, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NumeroSpedizione)
        @Html.TextBoxFor(model => model.NumeroSpedizione, new { @class = "form-control" })
    </div>
    <input type="submit" value="Ricerca" class="btn btn-primary" />
}

@if (Model != null && Model.SpedizioneID > 0)
{
    <div>
        <h3>Informazioni Spedizione</h3>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.SpedizioneID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SpedizioneID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NumeroSpedizione)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumeroSpedizione)
            </dd>

           

        </dl>
    </div>
}
else if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<p>
    @Html.ActionLink("Torna alla Home", "Index")
</p>
