@model Corriere.Models.Spedizione

@{
    ViewBag.Title = "Aggiorna Stato Spedizione";
}

<h2>Aggiorna Stato Spedizione</h2>

@using (Html.BeginForm("ModificaSpedizione", "NomeDelTuoController", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Aggiorna Stato Spedizione</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.SpedizioneID)

        <div class="form-group">
            <label for="Stato" class="control-label col-md-2">Stato</label>
            <div class="col-md-10">
                <select class="form-control" id="Stato" name="Stato">
                    @foreach (var stato in ViewBag.StatiPossibili)
                    {
                        <option value="@stato" @(Model.Stato == stato ? "selected" : "")>@stato</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aggiorna" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Torna Indietro", "Index")
</div>
